<view class="container">
  <!-- 自定义导航栏 -->
  <view class="custom-navbar">
    <view class="navbar-content">
      <text class="navbar-title">个人中心</text>
    </view>
  </view>

  <!-- 用户信息卡片 -->
  <view class="user-card">
    <image class="user-avatar" src="{{userInfo.avatarUrl || '/images/avatar1.jpg'}}" mode="aspectFill" />
    <view class="user-details">
      <text class="user-name">{{userInfo.nickName || '未登录'}}</text>
      <text class="user-id" wx:if="{{userInfo.nickName}}">ID: {{userInfo.userId || '000000'}}</text>
    </view>
    <button wx:if="{{!hasUserInfo}}" class="login-btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo">点击登录</button>
  </view>

  <!-- 功能菜单区 -->
  <view class="menu-section">
    <view class="menu-grid">
      <view class="menu-item" wx:for="{{menuList}}" wx:key="title" data-index="{{index}}" bindtap="onMenuClick">
        <view class="menu-icon {{item.color}}">
          <image src="{{item.icon}}" mode="aspectFit" />
        </view>
        <text class="menu-title">{{item.title}}</text>
      </view>
    </view>
  </view>

  <!-- 其他功能 -->
  <view class="other-section">
    <view class="other-item" bindtap="onSettings">
      <text class="other-title">设置</text>
      <text class="arrow">></text>
    </view>
    <view class="other-item" bindtap="onAbout">
      <text class="other-title">关于我们</text>
      <text class="arrow">></text>
    </view>
  </view>
</view> 