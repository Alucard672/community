/* 分列页面样式 */

/* ===== 页面容器 ===== */
.container {
  background-color: var(--bg-primary);
  min-height: 100vh;
  padding: var(--spacing-lg);
}

/* ===== 页面标题 ===== */
.page-header {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  padding: var(--spacing-xl) 0;
}

.page-title {
  font-size: var(--font-size-2xl);
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  display: block;
}

.page-subtitle {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  display: block;
}

/* ===== 区块样式 ===== */
.section {
  background-color: var(--bg-secondary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.section-header {
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-sm);
  margin-right: var(--spacing-sm);
}

/* ===== 演示项目样式 ===== */
.demo-item {
  background: var(--primary-gradient);
  color: white;
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-md);
  font-weight: 500;
  text-align: center;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
}

.demo-item:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

/* ===== 滚动项目样式 ===== */
.scroll-item {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-md);
  font-weight: 500;
  text-align: center;
  border: 1rpx solid var(--border-light);
  min-width: 200rpx;
  margin-right: var(--spacing-md);
  transition: all var(--transition-normal);
}

.scroll-item:active {
  background-color: var(--primary-color);
  color: white;
  transform: scale(0.95);
}

/* ===== 网格项目样式 ===== */
.grid-item {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  padding: var(--spacing-lg);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-md);
  font-weight: 500;
  text-align: center;
  border: 1rpx solid var(--border-light);
  transition: all var(--transition-normal);
}

.grid-item:active {
  background-color: var(--primary-color);
  color: white;
  transform: scale(0.95);
}

/* ===== 分类列表样式 ===== */
.category-list {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  gap: var(--spacing-md);
  padding: var(--spacing-sm) 0;
}

.category-item {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md);
  border-radius: var(--radius-lg);
  background-color: var(--bg-tertiary);
  border: 1rpx solid var(--border-light);
  transition: all var(--transition-normal);
  min-width: 120rpx;
}

.category-item:active {
  transform: scale(0.95);
  background-color: var(--bg-primary);
  border-color: var(--primary-color);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-sm);
  color: white;
  font-size: var(--font-size-xl);
  box-shadow: var(--shadow-md);
}

.category-name {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  text-align: center;
  line-height: var(--line-height-tight);
}

/* 分类图标颜色 */
.category-icon.orange { background: linear-gradient(135deg, #ff6b35, #f7931e); }
.category-icon.teal { background: linear-gradient(135deg, #4ecdc4, #44a08d); }
.category-icon.blue { background: linear-gradient(135deg, #45b7d1, #96c93d); }
.category-icon.green { background: linear-gradient(135deg, #96ceb4, #feca57); }
.category-icon.purple { background: linear-gradient(135deg, #a8e6cf, #dcedc1); }
.category-icon.pink { background: linear-gradient(135deg, #ff9a9e, #fecfef); }

/* ===== 按钮样式 ===== */
.btn {
  padding: var(--spacing-md) var(--spacing-xl);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-md);
  font-weight: 500;
  border: none;
  transition: all var(--transition-normal);
  min-width: 160rpx;
}

.btn-primary {
  background: var(--primary-gradient);
  color: white;
  box-shadow: var(--shadow-md);
}

.btn-primary:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

.btn-secondary {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  border: 1rpx solid var(--border-light);
}

.btn-secondary:active {
  background: var(--bg-primary);
  transform: scale(0.95);
}

/* ===== 标签样式 ===== */
.tag {
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-sm);
  font-weight: 500;
  border: 1rpx solid transparent;
  transition: all var(--transition-normal);
}

.tag-primary {
  background: var(--primary-gradient);
  color: white;
}

.tag-secondary {
  background: var(--bg-tertiary);
  color: var(--text-secondary);
  border-color: var(--border-light);
}

.tag-success {
  background: linear-gradient(135deg, #4caf50, #388e3c);
  color: white;
}

.tag-warning {
  background: linear-gradient(135deg, #ff9800, #f57c00);
  color: white;
}

/* ===== 统计信息样式 ===== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-md);
}

.stat-item {
  text-align: center;
  padding: var(--spacing-md);
  border-radius: var(--radius-lg);
  background-color: var(--bg-tertiary);
  border: 1rpx solid var(--border-light);
  transition: all var(--transition-normal);
}

.stat-item:active {
  transform: scale(0.95);
  background-color: var(--bg-primary);
  border-color: var(--primary-color);
}

.stat-number {
  font-size: var(--font-size-xl);
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
  line-height: var(--line-height-tight);
  display: block;
}

.stat-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: var(--line-height-tight);
  display: block;
}

/* ===== 帖子演示样式 ===== */
.post-demo {
  background: var(--bg-tertiary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  border: 1rpx solid var(--border-light);
}

.post-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-full);
  margin-right: var(--spacing-md);
}

.post-info {
  flex: 1;
}

.author-name {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  display: block;
}

.post-time {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  display: block;
}

.post-category {
  background: var(--primary-gradient);
  color: white;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  font-weight: 500;
}

.post-footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-light);
}

.post-stats {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: var(--spacing-md);
}

.post-stats .stat-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: var(--spacing-xs);
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
  background: none;
  border: none;
  padding: 0;
}

.post-price {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: var(--primary-color);
}

/* ===== 搜索栏样式 ===== */
.search-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: var(--spacing-md);
}

.search-input {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: var(--bg-tertiary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  border: 1rpx solid var(--border-light);
}

.search-input icon {
  margin-right: var(--spacing-sm);
  color: var(--text-secondary);
}

.search-input input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.location {
  width: 80rpx;
  height: 80rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
}

.location:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

/* ===== 响应式设计 ===== */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .grid-row-4 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .grid-row-3 {
    grid-template-columns: repeat(2, 1fr);
  }
} 