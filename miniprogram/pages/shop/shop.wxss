/* ===== 店铺页面样式 ===== */

/* 页面容器 */
.container {
  background-color: var(--bg-secondary);
  min-height: 100vh;
}

/* ===== 店铺头部 ===== */
.shop-header {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.shop-banner {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.shop-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.7) 100%);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: var(--spacing-lg);
}

.shop-info {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.shop-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-full);
  border: 4rpx solid white;
  margin-right: var(--spacing-md);
}

.shop-details {
  flex: 1;
  color: white;
}

.shop-name {
  font-size: var(--font-size-xl);
  font-weight: 700;
  margin-bottom: var(--spacing-xs);
  display: block;
}

.shop-desc {
  font-size: var(--font-size-sm);
  opacity: 0.9;
  margin-bottom: var(--spacing-sm);
  display: block;
}

.shop-stats {
  display: flex;
  gap: var(--spacing-md);
}

.stat-item {
  font-size: var(--font-size-xs);
  opacity: 0.8;
}

.shop-actions {
  display: flex;
  gap: var(--spacing-md);
}

.follow-btn,
.followed-btn,
.contact-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-sm);
  font-weight: 500;
  border: none;
}

.follow-btn {
  background: var(--primary-gradient);
  color: white;
}

.followed-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.contact-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* ===== 店铺导航 ===== */
.shop-nav {
  display: flex;
  background-color: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-light);
  box-shadow: var(--shadow-sm);
}

.nav-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-md);
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  border-bottom: 3rpx solid transparent;
  transition: all var(--transition-normal);
}

.nav-item.active {
  color: var(--primary-color);
  border-bottom-color: var(--primary-color);
  font-weight: 600;
}

/* ===== 标签页内容 ===== */
.tab-content {
  padding: var(--spacing-md);
}

/* ===== 筛选栏 ===== */
.filter-bar {
  display: flex;
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  padding: var(--spacing-sm);
  border-radius: var(--radius-sm);
  transition: all var(--transition-normal);
}

.filter-item:active {
  background-color: var(--bg-tertiary);
}

/* ===== 商品网格 ===== */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
}

.product-item {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
  transition: all var(--transition-normal);
}

.product-item:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
  border-color: var(--primary-color);
}

.product-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.product-info {
  padding: var(--spacing-md);
}

.product-title {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  line-height: var(--line-height-tight);
  display: block;
}

.product-price {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
  display: block;
}

.product-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sales-count {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

.rating {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

/* ===== 评价统计 ===== */
.review-stats {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.rating-overview {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.overall-rating {
  font-size: var(--font-size-2xl);
  font-weight: 700;
  color: var(--primary-color);
  margin-right: var(--spacing-md);
}

.rating-label {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.rating-breakdown {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.rating-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rating-value {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: var(--text-primary);
}

/* ===== 评价列表 ===== */
.review-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.review-item {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.reviewer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--radius-full);
  margin-right: var(--spacing-md);
  border: 2rpx solid var(--border-light);
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  display: block;
}

.review-rating {
  display: flex;
  gap: var(--spacing-xs);
}

.star {
  font-size: var(--font-size-sm);
  color: #ffc107;
}

.review-time {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

.review-content {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
  margin-bottom: var(--spacing-md);
  display: block;
}

.review-images {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.review-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-lg);
  object-fit: cover;
}

.review-product {
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-light);
}

.product-name {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

/* ===== 店铺信息 ===== */
.info-section {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) 0;
  border-bottom: 1rpx solid var(--border-light);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.info-value {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  text-align: right;
  flex: 1;
  margin-left: var(--spacing-md);
}

.certification-section {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-lg);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-sm);
  margin-right: var(--spacing-sm);
}

.certification-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.certification-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md);
  background-color: var(--bg-secondary);
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--border-light);
}

.certification-item text {
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-2xl) var(--spacing-lg);
  text-align: center;
  color: var(--text-muted);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: var(--spacing-lg);
}

.empty-title {
  font-size: var(--font-size-lg);
  font-weight: 500;
  margin-bottom: var(--spacing-sm);
  color: var(--text-secondary);
}

.empty-desc {
  font-size: var(--font-size-md);
  line-height: var(--line-height-relaxed);
  color: var(--text-secondary);
}

/* ===== 弹窗样式 ===== */
.sort-modal,
.category-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.sort-options,
.category-options {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-lg);
  min-width: 300rpx;
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md);
  border-radius: var(--radius-lg);
  transition: all var(--transition-normal);
}

.option-item:active {
  background-color: var(--bg-tertiary);
}

.option-item text {
  font-size: var(--font-size-md);
  color: var(--text-primary);
} 