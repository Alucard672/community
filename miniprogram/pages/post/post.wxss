/* ===== 帖子详情页面现代化优化 ===== */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-top: 48rpx;
  padding-bottom: 120rpx;
}

/* 内容卡片 */
.post-card {
  background: #fff;
  margin: 64rpx 32rpx 24rpx 32rpx;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.04);
  position: relative;
  overflow: hidden;
}

.author-section {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 32rpx;
  border: 2rpx solid #eee;
  background: #f8f9fa;
}
.author-info {
  flex: 1;
}
.author-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}
.post-time {
  font-size: 24rpx;
  color: #999;
}
.author-actions {
  margin-left: 16rpx;
}
.follow-btn, .followed-btn {
  font-size: 24rpx;
  border-radius: 24rpx;
  padding: 8rpx 32rpx;
  border: none;
  background: linear-gradient(90deg, #27ae60 0%, #2ecc71 100%);
  color: #fff;
  font-weight: 600;
}
.followed-btn {
  background: #eee;
  color: #888;
}

.post-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #222;
  margin: 32rpx 0 8rpx 0;
  line-height: 1.2;
}
.post-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.7;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 32rpx;
}
.post-image {
  width: calc((100% - 24rpx) / 3);
  height: 200rpx;
  border-radius: 16rpx;
  object-fit: cover;
  background: #f8f9fa;
  flex-shrink: 0;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 32rpx;
}
.tag-item {
  background-color: #e8f5e8;
  color: #27ae60;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  border: 1rpx solid #c8e6c9;
}

.price-section {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.price-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}
.price-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #27ae60;
}
.location-section {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.location-text {
  font-size: 24rpx;
  color: #27ae60;
  margin-left: 8rpx;
}

.stats-section {
  background-color: #f8f9fa;
  margin: 24rpx 0;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  display: flex;
  justify-content: space-around;
  border: 1rpx solid #e8f5e8;
}
.stat-item {
  text-align: center;
}
.stat-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #27ae60;
  margin-bottom: 8rpx;
}
.stat-label {
  font-size: 22rpx;
  color: #999;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 24rpx 0 0 0;
  padding: 24rpx 0;
  border-top: 1rpx solid #f0f2f5;
  background: #fafbfc;
  border-radius: 16rpx;
  margin-top: 24rpx;
}
.action-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  transition: all 0.2s;
  min-width: 100rpx;
}
.action-item:active {
  background: #f8f9fa;
  transform: scale(0.9);
}

.action-icon {
  font-size: 32rpx;
  line-height: 1;
  transition: all 0.2s;
}

.action-icon.warning {
  font-size: 28rpx;
}




.comments-section {
  background-color: #fff;
  margin: 32rpx 24rpx;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.04);
}

/* 内嵌评论输入框 */
.comment-input-section {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 1rpx solid #e8f5e8;
}

.comment-input-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 1rpx solid #eee;
  flex-shrink: 0;
}

.comment-input-wrapper {
  flex: 1;
}

.comment-textarea {
  width: 100%;
  min-height: 80rpx;
  max-height: 200rpx;
  border: none;
  background: transparent;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  padding: 0;
  margin-bottom: 12rpx;
}

.comment-input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-count {
  font-size: 24rpx;
  color: #999;
}

.submit-comment-btn {
  background: #27ae60;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 16rpx;
  border: none;
  font-weight: 500;
}

.submit-comment-btn[disabled] {
  background: #ccc;
  color: #999;
}
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #27ae60;
  display: flex;
  align-items: center;
  border-left: 8rpx solid #27ae60;
  padding-left: 16rpx;
  margin-bottom: 32rpx;
}
.comment-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}
.comment-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}
.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 1rpx solid #eee;
}
.comment-content {
  flex: 1;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 20rpx;
}
.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
.comment-author {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}
.comment-time {
  font-size: 22rpx;
  color: #999;
}
.comment-text {
  font-size: 26rpx;
  color: #666;
}
.comment-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 8rpx;
}
.reply-btn {
  color: #27ae60;
  font-size: 24rpx;
  font-weight: 500;
}
.like-btn {
  color: #888;
  font-size: 24rpx;
  font-weight: 500;
}
.like-btn.liked {
  color: #27ae60;
  font-weight: 600;
}

/* 空状态卡片化主色 */
.empty-comments-card {
  background: linear-gradient(135deg, #e8f5e8 0%, #f0f9ff 100%);
  border-radius: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  padding: 64rpx 0 48rpx 0;
  margin: 48rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-icon-main {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  color: #27ae60;
}
.empty-title-main {
  font-size: 36rpx;
  font-weight: 700;
  color: #27ae60;
  margin-bottom: 12rpx;
}
.empty-desc-main {
  font-size: 28rpx;
  color: #888;
}

/* ===== 相关推荐部分优化 ===== */
.related-section {
  background-color: #fafbfc;
  margin: 32rpx 24rpx;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.04);
  border: 1rpx solid #f0f2f5;
}

.related-list {
  display: flex;
  overflow-x: auto;
  gap: 24rpx;
  padding: 8rpx 0;
  scrollbar-width: none;
  -ms-overflow-style: none;
}
.related-list::-webkit-scrollbar {
  display: none;
}

.related-item {
  flex-shrink: 0;
  width: 280rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  border: 1rpx solid #f0f2f5;
  transition: all 0.3s ease;
}
.related-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.related-image {
  width: 100%;
  height: 180rpx;
  object-fit: cover;
  background: #f8f9fa;
}

.related-info {
  padding: 20rpx;
}

.related-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.related-price {
  font-size: 28rpx;
  font-weight: 700;
  color: #27ae60;
  background: #e8f5e8;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}