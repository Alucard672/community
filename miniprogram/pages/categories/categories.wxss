/* ===== 分类页面现代化设计优化 ===== */

.container {
  background-color: var(--bg-secondary);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-light);
  box-shadow: var(--shadow-sm);
  padding-top: 100rpx; /* 适当减少顶部空白 */
}

.search-section {
  padding: 24rpx 32rpx 0 32rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: var(--bg-tertiary);
  border-radius: 48rpx;
  padding: 16rpx 32rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.search-bar:focus-within {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(67,233,123,0.08);
}

.search-bar icon {
  margin-right: 16rpx;
  color: var(--text-muted);
}

.search-bar input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
}

.category-scroll-section {
  padding: 12rpx 32rpx 0 32rpx;
  border-bottom: 1rpx solid var(--border-light);
  background: var(--bg-primary);
}

.category-scroll {
  white-space: nowrap;
  padding-bottom: 12rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
  transition: all 0.2s;
}

.category-icon-bg {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f0f2f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  font-size: 40rpx;
  color: #bbb;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  transition: all 0.2s;
}
.category-icon-bg.active {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(67,233,123,0.15);
}

.category-name {
  font-size: 24rpx;
  color: #888;
  font-weight: 500;
  transition: all 0.2s;
}
.category-name.active {
  color: #43e97b;
  font-weight: 700;
}

.posts-section {
  background-color: var(--bg-primary);
  margin-top: 240rpx; /* 适当减少顶部间距 */
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(67,233,123,0.06);
  border: 1rpx solid var(--border-light);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.post-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  background-color: var(--bg-tertiary);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.post-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.post-item {
  background-color: var(--bg-secondary);
  border-radius: 32rpx;
  padding: 32rpx;
  border: 1rpx solid var(--border-light);
  transition: all 0.2s;
  box-shadow: 0 2rpx 12rpx rgba(67,233,123,0.08);
}

.post-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 32rpx rgba(67,233,123,0.12);
  border-color: var(--primary-color);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 2rpx solid var(--border-light);
}

.post-info {
  flex: 1;
}

.author-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  display: block;
}

.post-time {
  font-size: 22rpx;
  color: var(--text-secondary);
  display: block;
}

.post-category {
  background: var(--primary-gradient);
  color: white;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.post-content {
  margin-bottom: 24rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  line-height: 1.2;
  display: block;
}

.post-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  display: block;
}

.post-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--border-light);
}

.post-stats {
  display: flex;
  gap: 24rpx;
}

/* 空状态卡片化主色 */
.empty-state-card {
  background: linear-gradient(135deg, #e0ffe7 0%, #f0f9ff 100%);
  border-radius: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(67,233,123,0.08);
  padding: 64rpx 0 48rpx 0;
  margin: 48rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-icon-main {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  color: #43e97b;
}
.empty-title-main {
  font-size: 36rpx;
  font-weight: 700;
  color: #43e97b;
  margin-bottom: 12rpx;
}
.empty-desc-main {
  font-size: 28rpx;
  color: #888;
} 