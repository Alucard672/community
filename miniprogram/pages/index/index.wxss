/* ===== 首页现代化设计 ===== */

/* 页面容器 */
.container {
  background-color: var(--bg-secondary);
  min-height: 100vh;
  padding-bottom: 120rpx;
  /* 防止水平滚动 */
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}

/* 全局防止水平滚动 */
page {
  overflow-x: hidden;
  width: 100%;
}

/* ===== 自定义导航栏 ===== */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1001;
  background-color: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-light);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  padding-top: 44rpx; /* 状态栏高度 */
}

.navbar-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--primary-color);
}

/* ===== 搜索栏设计 ===== */
.search-header {
  position: sticky;
  top: 132rpx; /* 导航栏高度 + 状态栏高度 */
  z-index: 1000;
  background-color: var(--bg-primary);
  border-bottom: 1rpx solid var(--border-light);
  box-shadow: var(--shadow-sm);
}

.search-bar {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-lg);
  background-color: var(--bg-primary);
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: var(--bg-tertiary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-sm) var(--spacing-md);
  margin-right: var(--spacing-md);
  transition: all var(--transition-normal);
  border: 2rpx solid transparent;
}

.search-input:active {
  background-color: var(--bg-secondary);
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(0, 200, 83, 0.1);
}

.search-input icon {
  margin-right: var(--spacing-sm);
  color: var(--text-muted);
  font-size: var(--font-size-md);
}

.search-input input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  background: transparent;
  border: none;
}

.search-input input::placeholder {
  color: var(--text-muted);
}

.location {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--radius-full);
  transition: all var(--transition-normal);
  background-color: var(--bg-tertiary);
  border: 2rpx solid transparent;
}

.location:active {
  background-color: var(--primary-color);
  color: white;
  transform: scale(0.95);
}

.location icon {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

/* ===== 信息分类区域 ===== */
.category-section {
  background-color: var(--bg-primary);
  margin: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.category-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
}

.category-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-sm);
  margin-right: var(--spacing-sm);
}

.category-more {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-md);
  transition: all var(--transition-normal);
}

.category-more:active {
  background-color: var(--bg-tertiary);
  color: var(--primary-color);
}

/* ===== 分类列表横向排列 ===== */
.category-list {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  gap: var(--spacing-md);
  padding: var(--spacing-sm) 0;
}

.category-item {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md);
  border-radius: var(--radius-lg);
  background-color: var(--bg-secondary);
  border: 1rpx solid var(--border-light);
  transition: all var(--transition-normal);
  min-width: 120rpx;
}

.category-item:active {
  transform: scale(0.95);
  background-color: var(--bg-tertiary);
  border-color: var(--primary-color);
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-md);
  color: white;
  font-size: var(--font-size-xl);
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
}

.category-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.2), rgba(255,255,255,0));
  border-radius: var(--radius-full);
}

/* 分类图标颜色 */
.category-icon.orange { background: linear-gradient(135deg, #ff6b35, #f7931e); }
.category-icon.teal { background: linear-gradient(135deg, #00bcd4, #009688); }
.category-icon.blue { background: linear-gradient(135deg, #2196f3, #1976d2); }
.category-icon.green { background: linear-gradient(135deg, #4caf50, #388e3c); }
.category-icon.purple { background: linear-gradient(135deg, #9c27b0, #7b1fa2); }
.category-icon.pink { background: linear-gradient(135deg, #e91e63, #c2185b); }

.category-name {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  font-weight: 500;
  line-height: var(--line-height-tight);
}

/* ===== 推荐商家区域 ===== */
.merchant-section {
  background-color: var(--bg-primary);
  margin: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.merchant-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.merchant-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
}

.merchant-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-sm);
  margin-right: var(--spacing-sm);
}

.merchant-more {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-md);
  transition: all var(--transition-normal);
}

.merchant-more:active {
  background-color: var(--bg-tertiary);
  color: var(--primary-color);
}

.merchant-scroll {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
  padding: var(--spacing-sm) 0;
  gap: var(--spacing-md);
  /* 隐藏滚动条 */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
}

/* 隐藏 WebKit 浏览器的滚动条 */
.merchant-scroll::-webkit-scrollbar {
  display: none;
}

.merchant-item {
  flex-shrink: 0;
  width: 260rpx;
  background-color: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  transition: all var(--transition-normal);
  border: 1rpx solid var(--border-light);
  white-space: normal;
}

.merchant-item:active {
  transform: scale(0.98);
  background-color: var(--bg-tertiary);
  box-shadow: var(--shadow-md);
}

.merchant-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-lg);
  margin-bottom: var(--spacing-md);
  display: block;
  margin: 0 auto var(--spacing-md);
  box-shadow: var(--shadow-sm);
  border: 2rpx solid var(--border-light);
}

.merchant-info {
  text-align: center;
}

.merchant-name {
  display: block;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 600;
}

.merchant-desc {
  display: block;
  font-size: var(--font-size-sm);
  color: var(--text-muted);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: var(--line-height-tight);
}

/* ===== 内容区域 ===== */
.content-section {
  background-color: var(--bg-primary);
  margin: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.content-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
}

.content-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-sm);
  margin-right: var(--spacing-sm);
}

.filter-tabs {
  display: flex;
  gap: var(--spacing-sm);
  flex-shrink: 0;
}

.tab {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-xl);
  transition: all var(--transition-normal);
  background-color: var(--bg-tertiary);
  border: 1rpx solid transparent;
  white-space: nowrap;
}

.tab:active {
  background-color: var(--bg-secondary);
}

.tab.active {
  background: var(--primary-gradient);
  color: white;
  box-shadow: var(--shadow-md);
  border-color: var(--primary-color);
}

/* ===== 帖子列表 ===== */
.post-list {
  margin-top: var(--spacing-lg);
}

.post-item {
  border-bottom: 1rpx solid var(--border-light);
  padding: var(--spacing-md) 0;
  transition: all var(--transition-normal);
}

.post-item:last-child {
  border-bottom: none;
}

.post-item:active {
  background-color: var(--bg-secondary);
  border-radius: var(--radius-lg);
  margin: 0 calc(-1 * var(--spacing-md));
  padding: var(--spacing-lg) var(--spacing-md);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-full);
  margin-right: var(--spacing-md);
  border: 3rpx solid var(--border-light);
  box-shadow: var(--shadow-sm);
}

.post-info {
  flex: 1;
}

.author-name {
  display: block;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  font-weight: 600;
}

.post-time {
  font-size: var(--font-size-sm);
  color: var(--text-muted);
}

.post-category {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  color: white;
  font-weight: 500;
  background: var(--primary-gradient);
  margin-left: var(--spacing-sm);
}

.post-content {
  margin-bottom: var(--spacing-md);
}

.post-title {
  display: block;
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  line-height: var(--line-height-tight);
}

.post-desc {
  display: block;
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
  margin-bottom: var(--spacing-sm);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.post-images {
  display: flex;
  gap: var(--spacing-xs);
  flex-wrap: wrap;
  margin-bottom: var(--spacing-md);
}

.post-images image {
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--radius-md);
  object-fit: cover;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

/* ===== 帖子统计信息横向排列 ===== */
.post-stats {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: var(--spacing-md);
}

.post-stats .stat-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: var(--spacing-xs);
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
}

/* ===== 帖子底部横向排列 ===== */
.post-footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--border-light);
}

.post-stats {
  display: flex;
  gap: var(--spacing-lg);
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: var(--font-size-sm);
  color: var(--text-muted);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-md);
  transition: all var(--transition-normal);
}

.stat-item:active {
  background-color: var(--bg-tertiary);
  color: var(--primary-color);
}

.stat-item icon {
  margin-right: var(--spacing-xs);
  font-size: var(--font-size-sm);
}

.post-price {
  font-size: var(--font-size-lg);
  color: var(--accent-color);
  font-weight: 700;
}

/* ===== 加载更多 ===== */
.load-more {
  text-align: center;
  padding: var(--spacing-xl) 0;
}

.load-more text {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  padding: var(--spacing-md) var(--spacing-xl);
  border: 2rpx solid var(--border-light);
  border-radius: var(--radius-xl);
  transition: all var(--transition-normal);
  background-color: var(--bg-primary);
}

.load-more text:active {
  background-color: var(--bg-tertiary);
  border-color: var(--primary-color);
  color: var(--primary-color);
}

/* ===== 悬浮发布按钮 ===== */
.float-publish {
  position: fixed;
  right: var(--spacing-xl);
  bottom: 140rpx;
  width: 120rpx;
  height: 120rpx;
  background: var(--primary-gradient);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-lg);
  z-index: 1000;
  transition: all var(--transition-normal);
  border: 4rpx solid var(--bg-primary);
}

.float-publish:active {
  transform: scale(0.9);
  box-shadow: var(--shadow-xl);
}

.float-publish icon {
  font-size: var(--font-size-xl);
  color: white;
}

/* ===== 演示按钮 ===== */
.demo-section {
  margin: var(--spacing-lg) 0;
  text-align: center;
}

.demo-btn {
  background: var(--primary-gradient);
  color: white;
  padding: var(--spacing-md) var(--spacing-xl);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-md);
  font-weight: 500;
  border: none;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
}

.demo-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

/* ===== 响应式设计 ===== */
@media (max-width: 750rpx) {
  .category-list {
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }
  
  .category-item {
    flex: 0 0 calc(50% - var(--spacing-sm));
  }
  
  .merchant-item {
    width: 220rpx;
  }
  
  .post-images image {
    width: 160rpx;
    height: 160rpx;
  }
}

/* ===== 动画效果 ===== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.category-section,
.merchant-section,
.content-section {
  animation: fadeInUp 0.6s ease-out;
}

.category-item {
  animation: fadeInUp 0.6s ease-out;
  animation-delay: calc(var(--item-index, 0) * 0.1s);
}

/* ===== 深色模式支持 ===== */
@media (prefers-color-scheme: dark) {
  page {
    --bg-primary: #1a1a1a;
    --bg-secondary: #2d2d2d;
    --bg-tertiary: #3d3d3d;
    --text-primary: #ffffff;
    --text-secondary: #b0b0b0;
    --text-muted: #808080;
    --border-light: #404040;
    --border-medium: #505050;
  }
} 