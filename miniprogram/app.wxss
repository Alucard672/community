/* ===== 现代化设计系统 ===== */

/* 全局变量 */
page {
  /* 主色调 - 清新绿色系 */
  --primary-color: #00c853;
  --primary-light: #5efc82;
  --primary-dark: #009624;
  --primary-gradient: linear-gradient(135deg, #00c853, #64dd17);
  
  /* 辅助色 */
  --secondary-color: #2196f3;
  --accent-color: #ff6b35;
  --success-color: #4caf50;
  --warning-color: #ff9800;
  --error-color: #f44336;
  
  /* 中性色 */
  --text-primary: #212121;
  --text-secondary: #757575;
  --text-muted: #9e9e9e;
  --text-disabled: #bdbdbd;
  
  /* 背景色 */
  --bg-primary: #ffffff;
  --bg-secondary: #fafafa;
  --bg-tertiary: #f5f5f5;
  --bg-overlay: rgba(0, 0, 0, 0.5);
  
  /* 边框色 */
  --border-light: #e0e0e0;
  --border-medium: #bdbdbd;
  --border-dark: #9e9e9e;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.16);
  --shadow-xl: 0 16rpx 48rpx rgba(0, 0, 0, 0.24);
  
  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 50%;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-2xl: 64rpx;
  
  /* 字体 */
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-2xl: 42rpx;
  --font-size-3xl: 48rpx;
  
  /* 行高 */
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.8;
  
  /* 动画 */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.3s ease;
  --transition-slow: 0.5s ease;
  
  /* 全局样式 */
  background-color: var(--bg-secondary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: var(--text-primary);
  line-height: var(--line-height-normal);
  font-size: var(--font-size-md);
}

/* ===== 布局组件 ===== */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-secondary);
}

.safe-area {
  padding-top: 44rpx;
  padding-bottom: 34rpx;
}

/* ===== 按钮组件 ===== */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-md);
  font-size: var(--font-size-md);
  font-weight: 500;
  text-align: center;
  border: none;
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
}

.btn:active {
  transform: translateY(2rpx);
}

.btn-primary {
  background: var(--primary-gradient);
  color: white;
  box-shadow: var(--shadow-md);
}

.btn-primary:active {
  box-shadow: var(--shadow-sm);
}

.btn-secondary {
  background-color: var(--bg-primary);
  color: var(--text-primary);
  border: 2rpx solid var(--border-light);
  box-shadow: var(--shadow-sm);
}

.btn-secondary:active {
  background-color: var(--bg-tertiary);
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-outline:active {
  background-color: var(--primary-color);
  color: white;
}

.btn-ghost {
  background-color: transparent;
  color: var(--text-secondary);
  border: 2rpx solid transparent;
}

.btn-ghost:active {
  background-color: var(--bg-tertiary);
}

.btn-sm {
  padding: var(--spacing-xs) var(--spacing-md);
  font-size: var(--font-size-sm);
  border-radius: var(--radius-sm);
}

.btn-lg {
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-size-lg);
  border-radius: var(--radius-lg);
}

.btn-full {
  width: 100%;
}

.btn-disabled {
  opacity: 0.5;
}

.btn-disabled:active {
  transform: none;
}

/* ===== 卡片组件 ===== */
.card {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  transition: all var(--transition-normal);
}

.card:active {
  box-shadow: var(--shadow-md);
  transform: translateY(-2rpx);
}

.card-header {
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-light);
}

.card-body {
  padding: var(--spacing-lg);
}

.card-footer {
  padding: var(--spacing-lg);
  border-top: 1rpx solid var(--border-light);
  background-color: var(--bg-secondary);
}

.card-elevated {
  box-shadow: var(--shadow-lg);
}

.card-elevated:active {
  box-shadow: var(--shadow-xl);
}

/* ===== 输入框组件 ===== */
.input-group {
  position: relative;
  margin-bottom: var(--spacing-md);
}

.input {
  width: 100%;
  padding: var(--spacing-md);
  border: 2rpx solid var(--border-light);
  border-radius: var(--radius-md);
  font-size: var(--font-size-md);
  background-color: var(--bg-primary);
  transition: all var(--transition-normal);
  box-sizing: border-box;
}

.input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(0, 200, 83, 0.1);
}

.input-error {
  border-color: var(--error-color);
}

.input-success {
  border-color: var(--success-color);
}

.input-disabled {
  background-color: var(--bg-tertiary);
  color: var(--text-disabled);
}

.input-prefix,
.input-suffix {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-muted);
  font-size: var(--font-size-md);
}

.input-prefix {
  left: var(--spacing-md);
}

.input-suffix {
  right: var(--spacing-md);
}

.input-with-prefix {
  padding-left: 72rpx;
}

.input-with-suffix {
  padding-right: 72rpx;
}

/* ===== 标签组件 ===== */
.tag {
  display: flex;
  align-items: center;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-sm);
  font-weight: 500;
  line-height: 1;
}

.tag-primary {
  background-color: rgba(0, 200, 83, 0.1);
  color: var(--primary-color);
}

.tag-secondary {
  background-color: rgba(33, 150, 243, 0.1);
  color: var(--secondary-color);
}

.tag-success {
  background-color: rgba(76, 175, 80, 0.1);
  color: var(--success-color);
}

.tag-warning {
  background-color: rgba(255, 152, 0, 0.1);
  color: var(--warning-color);
}

.tag-error {
  background-color: rgba(244, 67, 54, 0.1);
  color: var(--error-color);
}

.tag-outline {
  background-color: transparent;
  border: 1rpx solid currentColor;
}

/* ===== 徽章组件 ===== */
.badge {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 var(--spacing-xs);
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
  font-weight: 600;
  line-height: 1;
  background-color: var(--error-color);
  color: white;
}

.badge-primary {
  background-color: var(--primary-color);
}

.badge-secondary {
  background-color: var(--secondary-color);
}

.badge-success {
  background-color: var(--success-color);
}

.badge-warning {
  background-color: var(--warning-color);
}

/* ===== 头像组件 ===== */
.avatar {
  border-radius: var(--radius-full);
  overflow: hidden;
  background-color: var(--bg-tertiary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
  font-weight: 500;
}

.avatar-sm {
  width: 60rpx;
  height: 60rpx;
  font-size: var(--font-size-sm);
}

.avatar-md {
  width: 80rpx;
  height: 80rpx;
  font-size: var(--font-size-md);
}

.avatar-lg {
  width: 120rpx;
  height: 120rpx;
  font-size: var(--font-size-lg);
}

.avatar-xl {
  width: 160rpx;
  height: 160rpx;
  font-size: var(--font-size-xl);
}

.avatar-ring {
  border: 4rpx solid var(--bg-primary);
  box-shadow: var(--shadow-sm);
}

/* ===== 分割线组件 ===== */
.divider {
  height: 1rpx;
  background-color: var(--border-light);
  margin: var(--spacing-md) 0;
}

.divider-vertical {
  width: 1rpx;
  height: 100%;
  background-color: var(--border-light);
  margin: 0 var(--spacing-md);
}

/* ===== 加载组件 ===== */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  color: var(--text-muted);
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-light);
  border-top: 4rpx solid var(--primary-color);
  border-radius: var(--radius-full);
  animation: spin 1s linear infinite;
  margin-right: var(--spacing-sm);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ===== 空状态组件 ===== */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-2xl) var(--spacing-lg);
  text-align: center;
  color: var(--text-muted);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-title {
  font-size: var(--font-size-lg);
  font-weight: 500;
  margin-bottom: var(--spacing-sm);
  color: var(--text-secondary);
}

.empty-desc {
  font-size: var(--font-size-md);
  line-height: var(--line-height-relaxed);
}

